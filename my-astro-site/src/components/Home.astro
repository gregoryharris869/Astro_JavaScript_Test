---
import HomeImg from "../img/cesar-rincon-XHVpWcr5grQ-unsplash.jpg";
---

<section class="home-section active">
    <h1 class="hero-heading">hello, i am <br>Gregory Harris</h1>
    <img src={HomeImg} class="home-img" alt="">
</section>

<style>

.home-section{

    width: 100%;
    height: 100vh;
    padding:  0 150px;
    display: flex;
    align-items: center;
    top: 0;    
}

.hero-heading{

    color: #fff;
    font-size: 100px;
    text-transform: uppercase;
    font-weight: 300;
}

.home-img{

    position: absolute;
    top: 0;
    right: 0;
    height: 100vh;
    width: 50%;
    object-fit: cover;
    opacity: 0.2;
}
    
</style>